
#include <bits/stdc++.h>

using namespace std;
int main(){
    int n;
    float p=0,N=0,z=0;
    cin>>n;
    int A[n];
    for(int i=0;i<n;i++){
        cin>>A[i];

    }
    for(int i=0;i<n;i++){
        if(A[i]>0){
            p+=1;

        }
        else if(A[i]<0){
            N+=1;
        }
        else{
            z+=1;
        }
    }
    p=p/n;
    cout<<p<<endl;
    N=N/n;
    cout<<N<<endl;
    z=z/n;
    cout<<z;
    return 0;

}
